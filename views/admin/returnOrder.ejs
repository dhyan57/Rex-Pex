    <style>
       /* Modern Admin Layout */
.admin-layout {
    display: flex;
    min-height: 100vh;
    background-color: #ffffff;
}

.main-content {
    flex: 1;
    margin-left: 250px;
    padding: 2.5rem;
    background: #fafbfc;
    transition: margin-left 0.3s ease;
}

/* Sleek Header Design */
.page-header {
    background: #ffffff;
    padding: 2rem 2.5rem;
    border-radius: 16px;
    margin-bottom: 2rem;
    border: 1px solid #f0f0f0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
}

.page-header h1 {
    color: #1a1f36;
    font-size: 2.25rem;
    letter-spacing: -0.5px;
}

.page-header p {
    color: #697386;
}

/* Enhanced Card Design */
.data-card {
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.04);
}

/* Table Styling */
.table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
}

.table th {
    background: #fcfcfd;
    padding: 1.25rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid #f1f5f9;
}

.table td {
    padding: 1.25rem 1rem;
    color: #334155;
    border-bottom: 1px solid #f1f5f9;
    font-size: 0.9375rem;
}

.table tbody tr:hover {
    background-color: #fafafa;
}

/* Status Badges */
.badge {
    padding: 0.5rem 0.875rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 8px;
}

.bg-success {
    background-color: #dcfce7 !important;
    color: #15803d !important;
}

.bg-danger {
    background-color: #fee2e2 !important;
    color: #b91c1c !important;
}

.bg-warning {
    background-color: #fef3c7 !important;
    color: #92400e !important;
}

/* Action Buttons */
.btn-action {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 8px;
    border: none;
    transition: all 0.2s ease;
}

.btn-success {
    background-color: #22c55e;
    color: white;
}

.btn-success:hover {
    background-color: #16a34a;
    transform: translateY(-1px);
}

.btn-danger {
    background-color: #ef4444;
    color: white;
}

.btn-danger:hover {
    background-color: #dc2626;
    transform: translateY(-1px);
}

/* Reason Cell */
.reason-cell {
    max-width: 200px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #475569;
}

/* Pagination */
.pagination {
    margin-top: 2rem;
}

.pagination .page-link {
    margin: 0 0.25rem;
    padding: 0.625rem 1rem;
    color: #475569;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
    font-weight: 500;
    transition: all 0.2s ease;
}

.pagination .page-link:hover {
    background-color: #f8fafc;
    color: #1e293b;
    border-color: #cbd5e0;
    z-index: 2;
}

.pagination .page-item.active .page-link {
    background-color: #0ea5e9;
    border-color: #0ea5e9;
    color: white;
}

.pagination .page-item.disabled .page-link {
    background-color: #f8fafc;
    border-color: #e2e8f0;
    color: #94a3b8;
}

/* Extra Utilities */
.fw-bold {
    font-weight: 600 !important;
}

.gap-2 {
    gap: 0.75rem !important;
}

/* Responsive Design */
@media (max-width: 992px) {
    .main-content {
        margin-left: 0;
        padding: 1.5rem;
    }

    .page-header {
        padding: 1.5rem;
    }

    .page-header h1 {
        font-size: 1.875rem;
    }

    .table td, 
    .table th {
        padding: 1rem;
    }

    .pagination .page-link {
        padding: 0.5rem 0.875rem;
    }
}

/* Table Responsive */
.table-responsive {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}

/* Hover Animations */
.data-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.data-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.06);
}

/* Focus States */
.btn-action:focus,
.page-link:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.15);
}
    </style>

<body>
    <%- include("../../views/partials/admin/header") %>
    
    <div class="admin-layout">
        <main class="main-content">
            <div class="page-header">
                <h1 class="display-5 fw-bold text-dark mb-2">Return Data Requests</h1>
                <p class="lead text-muted mb-0">Manage and process customer return requests</p>
            </div>
            
            <div class="data-card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th scope="col">Order ID</th>
                                    <th scope="col">User</th>
                                    <th scope="col">Reason</th>
                                    <th scope="col">Refund Amount</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% returns.forEach(returnData => { %>
                                    <tr>
                                        <td><%= returnData.orderId?.orderId || 'N/A' %></td>
                                        <td><%= returnData.userId?.name || 'N/A' %></td>
                                        <td class="reason-cell">
                                            <%= returnData.reason || 'No reason provided' %>
                                        </td>
                                        <td class="fw-bold">â‚¹<%= (returnData.refundAmount || 0).toFixed(2) %></td>
                                        <td>
                                            <% 
                                            let badgeClass;
                                            if(returnData.returnStatus === 'approved') {
                                                badgeClass = 'bg-success';
                                            } else if(returnData.returnStatus === 'rejected') {
                                                badgeClass = 'bg-danger';
                                            } else {
                                                badgeClass = 'bg-warning text-dark';
                                            }
                                            %>
                                            <span class="badge <%= badgeClass %>">
                                                <%= returnData.returnStatus || 'pending' %>
                                            </span>
                                        </td>
                                        <td>
                                            <%= new Date(returnData.createdAt || Date.now()).toLocaleDateString('en-US', { 
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric'
                                            }) %>
                                        </td>
                                        <td>
                                            <% if(returnData.returnStatus === 'pending') { %>
                                                <form action="/admin/returnDataUpdate?id=<%= returnData._id %>" method="POST" class="d-flex gap-2">
                                                    <button type="submit" name="status" value="approved" 
                                                        class="btn btn-action btn-success">
                                                        Approve
                                                    </button>
                                                    <button type="submit" name="status" value="rejected"
                                                        class="btn btn-action btn-danger">
                                                        Reject
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <span class="text-muted small">No actions available</span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-start">
                        <% 
                        let startPage = Math.max(1, currentPage - 2);
                        let endPage = Math.min(totalPages, startPage + 4);
                        
                        if (endPage - startPage < 4) {
                            startPage = Math.max(1, endPage - 4);
                        }
                        
                        if (startPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=1">1</a>
                            </li>
                            <% if (startPage > 2) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            <% } %>
                        <% } %>

                        <% for(let i = startPage; i <= endPage; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>

                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            <% } %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= totalPages %>"><%= totalPages %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <%- include("../../views/partials/admin/footer") %>
</body>
</html>