  <script>
    document.getElementById('couponForm').addEventListener('submit',async function (e) {
      e.preventDefault(); // Prevent default form submission
      const formData= new FormData(this)
      
      const data = Object.fromEntries(formData.entries()); // Convert FormData to an object

      // Validate minimum and maximum prices
      const minPrice = parseFloat(data.minimumPrice);
      const maxPrice = parseFloat(data.maximumPrice);
      const per=parseFloat(data.offerPrice);
      console.log(per);

      if (isNaN(minPrice) || isNaN(maxPrice)) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid Input',
          text: 'Both minimum and maximum price must be valid numbers.',
        });
        return;
      }

      if (minPrice >= maxPrice) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          text: 'Minimum price must be less than maximum price.',
        });
        return;
      }
      if (per>99 || per<0) {
        Swal.fire({
          icon: 'error',
          title: 'Validation Error',
          text: 'percentage must be between 0-99.',
        });
        return;
      }
      
      try {
        const response = await fetch('/admin/add-coupon', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          const result = await response.json();
          Swal.fire({
            icon: 'success',
            title: 'Coupon Added',
            text: `Coupon added successfully: ${result.message}`,
          })
          .then(()=>window.location.reload())
        } else {
          const error = await response.json();
          Swal.fire({
            icon: 'error',
            title: 'Error',
            text: error.message || 'Failed to add coupon.',
          });
        }
      } catch (err) {
        console.error(err);
        Swal.fire({
          icon: 'error',
          title: 'Unexpected Error',
          text: 'An unexpected error occurred. Please try again later.',
        });
      }
    });


    

    
 
</script>