                        <div class="alert alert-danger text-center">
                            <%=message%>
                        </div>
                        <%}
                    %>
                    <form id="sign-form" method="post" action="#">
                        <div class="mb-3">
                            <label class="form-label">Full name</label>
                            <input class="form-control" name="name" id="name" placeholder="Your name" type="text">
                            <div id="error-1" class="error-message"></div>
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" name="email" id="email" placeholder="Your email" type="text">
                            <div id="error-2" class="error-message"></div>
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                            <label class="form-label">Phone</label>
                            <div class="row gx-2">
                                <!-- <div class="col-4"> <input class="form-control" value="+998" type="text"> </div> -->
                                <input class="form-control" name="phone" id="phone" placeholder="Phone" type="text">
                                <!-- <div class="col-8"> <input class="form-control" placeholder="Phone" type="text"> </div> -->
                                <div id="error-3" class="error-message"></div>
                            </div>
                        </div> <!-- form-group// -->
                         
                        <div class="mb-3">
                            <label class="form-label"> referal Code</label>
                            <input class="form-control" name="referal" id="referal" placeholder="referal code (Optional)" type="text">
                            <div id="error-4" class="error-message"></div>
