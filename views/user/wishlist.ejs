        fetch(`/removeFromWishlist?id=${productId}`, { method: 'DELETE' })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire('Removed!', data.message, 'success').then(() => location.reload());
                } else {
